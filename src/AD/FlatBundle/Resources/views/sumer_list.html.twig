{% extends "CoreBundle:Core:menu.html.twig" %}

{% block title %}
{{ parent() }}
- Index
{% endblock %}


{% block body %}
<div class="container main-content">
	<h1 class="text-center display-4 text-underlign title">
		{{ 'gi.flat.verano.title'|trans }}
	</h1>
	<div class="row border-top border-warning pt-4">
		{% for flat in flats %}
		<div
			class="col-lg-12 col-xl-6 text-center px-4 pt-4 {% if loop.index0 is divisible by(2) and loop.index < loop.length %} p-right-2x-padding p-border-right {% endif %} {% if loop.index < loop.length %} lg-screen-border-bottom {% endif %}">
			<img class="mw-100 px-4 py-4 rounded img-list"
				src="{{ vich_uploader_asset(flat,'imageFile')| imagine_filter('pension_list_height') }}" style="border: 3px solid white;"/>
			<div class="text-center mt-3">
				<h4 class="display-4 title">
					{{ flat.name }}
				</h4>
			</div>
			<div class="row border-top border-bottom">
				<div class="col">
					{{ 'gi.flat.price.label'|trans }}
				</div>
			</div>
			<div class="row border-top border-bottom">
				<div class="col">
					$
					{{ flat.price|number_format(0, '.', '.') }}
				</div>
			</div>
			<div class="text-justify container mt-3 pension-description">
				{% if app.request.getLocale() == 'fr' %}
				{{ flat.descriptionFrench|length > 350 ? flat.descriptionFrench|striptags|truncate(350, true, "...")|raw : flat.descriptionFrench|raw }}
				{% endif %}
				{% if app.request.getLocale() == 'en' %}
				{{ flat.descriptionEnglish|length > 350 ? flat.descriptionEnglish|striptags|truncate(350, true, "...")|raw : flat.descriptionEnglish|raw  }}
				{% endif %}
				{% if app.request.getLocale() == 'es' %}
				{{ flat.descriptionSpanish|length > 350 ? flat.descriptionSpanish|striptags|truncate(350, true, "...")|raw : flat.descriptionSpanish|raw  }}
				{% endif %}
			</div>
			<div class="text-right">
				<a href="{{ path('flat_show',{'id': flat.id}) }}"
					class="btn btn-md btn-primary col-lg-4 col-sm-6 col-12 mt-3">{{ 'gi.button.flat.information'|trans }}</a>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}