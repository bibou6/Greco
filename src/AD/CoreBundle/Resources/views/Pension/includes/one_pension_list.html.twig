<div
	class="col-xl-12 px-4 pt-4 ">
	<div class="row">
		<div class="col-xl-4 col-md-12">
		<a href="{{ path('pension_show',{'id': pension.id}) }}">
			<img class="mw-100 px-4 py-4 rounded img-list"
				src="{{ vich_uploader_asset(pension,'imageFile')| imagine_filter('building_list_height') }}" />
		</a>
		</div>
		<div class="col-xl-8 col-md-12">
			<div class="row">
				<div class="col-xl-12"><h6 class="display-4 title text-muted">{{ pension.name }}</h6></div>
				<div class="col-xl-12 text-center">
					<div class="row border-top  border-bottom">
                		<div class="col border-right">
                			{{ 'gi.pension.minimumPrice.label'|trans }}
                		</div>
                		<div class="col">
                			{{ 'gi.pension.maximumPrice.label'|trans }}
                		</div>
                	</div>
                    <div class="row border-top border-bottom">
                		<div class="col border-right">
                			$
                			{{ pension.minimumPrice|number_format(0, '.', '.') }}
                		</div>
                		<div class="col">
                			$
                			{{ pension.maximumPrice|number_format(0, '.', '.') }}
                		</div>
                	</div>
				</div>
				<div class="col-xl-12">
            		<div class="text-justify container mt-3 pension-description">
            		    {{ pension.description(app.request.getLocale())|length > 350 ? pension.description(app.request.getLocale())|striptags|truncate(350, true, "...")|raw : pension.description(app.request.getLocale())|raw }}
            		</div>
				</div>
			</div>
		</div>
	</div>
</div>













